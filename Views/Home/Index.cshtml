@{
ViewData["Title"] = "Home";
Layout = "_Layout";
}

@section Styles {
<style>
    /* ----------------------------------------------------------
       Hero background & side illustrations
       ---------------------------------------------------------- */
    .hero {
        background: url('/images/hero-bg-light.png') no-repeat center bottom;
        background-size: cover;
    }
    .illu-left, .illu-right {
        position: absolute;
        bottom: 0;
        pointer-events: none;
    }
    .illu-left { left: 0; }
    .illu-right { right: 0; }

    /* ensure main scrolls below fixed header */
    main { margin-top: 4rem; }

    /* cap hero height so we can scroll on smaller screens */
    .hero { min-height: 75vh; }
</style>
}

<main class="relative">
    <!-- Hero -->
    <section class="hero relative flex items-center justify-center text-center px-6">
        <!-- side illustrations (only on lg+) -->
        <img src="~/images/illu-left.png"  class="illu-left hidden lg:block h-96" alt="" />
        <img src="~/images/illu-right.png" class="illu-right hidden lg:block h-96" alt="" />

        <div class="relative z-10 max-w-3xl">
            <h1 class="text-5xl lg:text-6xl font-extrabold">
                <span class="block text-green-500">One travel app</span>
                <span class="block text-gray-900">to replace them all</span>
            </h1>
            <p class="mt-4 text-lg text-gray-700">
                Streamline every aspect of your trip – from itinerary planning and travel budgeting
                to packing and wanderlust sharing.
            </p>
            <a href="#" class="btn btn-success btn-lg mt-6">Get started. It’s FREE</a>
        </div>
    </section>

    <!-- Features row -->
    <section class="py-12 bg-base-200">
        <div class="container mx-auto grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-8 gap-6 text-center">
            <div class="flex flex-col items-center">
                <i class="bi bi-file-earmark-text text-2xl text-gray-400"></i>
                <span class="mt-2 text-sm text-gray-500">Documents</span>
            </div>
            <div class="flex flex-col items-center">
                <i class="bi bi-sim text-2xl text-gray-400"></i>
                <span class="mt-2 text-sm text-gray-500">eSIM</span>
            </div>
            <div class="flex flex-col items-center">
                <i class="bi bi-person-circle text-2xl text-gray-400"></i>
                <span class="mt-2 text-sm text-gray-500">Profile</span>
            </div>
            <div class="flex flex-col items-center">
                <i class="bi bi-check2-circle text-2xl text-gray-400"></i>
                <span class="mt-2 text-sm text-gray-500">Checklist</span>
            </div>
            <div class="flex flex-col items-center">
                <i class="bi bi-calendar4-week text-2xl text-gray-400"></i>
                <span class="mt-2 text-sm text-gray-500">Planner</span>
            </div>
            <div class="flex flex-col items-center">
                <i class="bi bi-currency-dollar text-2xl text-gray-400"></i>
                <span class="mt-2 text-sm text-gray-500">Budget</span>
            </div>
            <div class="flex flex-col items-center">
                <i class="bi bi-journal-text text-2xl text-gray-400"></i>
                <span class="mt-2 text-sm text-gray-500">Journal</span>
            </div>
            <div class="flex flex-col items-center">
                <i class="bi bi-camera-reels text-2xl text-gray-400"></i>
                <span class="mt-2 text-sm text-gray-500">Travel reels</span>
            </div>
        </div>
    </section>

    <!-- Demo screenshots -->
    <section class="py-12">
        <div class="container mx-auto grid grid-cols-1 lg:grid-cols-12 gap-6">
            <div class="lg:col-span-8">
                <img src="~/images/demo-planner-large.png"
                     alt="Planner demo"
                     class="w-full rounded-lg shadow-lg" />
            </div>
            <div class="lg:col-span-4">
                <img src="~/images/demo-planner-sidebar.png"
                     alt="Sidebar demo"
                     class="w-full rounded-lg shadow-lg" />
            </div>
        </div>
    </section>

    <!-- Footer note -->
    <footer class="py-6 text-center text-gray-500">
        &copy; 2025 stippl. All rights reserved.
    </footer>
</main>
