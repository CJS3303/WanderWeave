<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] – WanderWeave</title>

  <!-- Tailwind + DaisyUI -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.14/dist/full.min.css" rel="stylesheet" />

  <link
    href="https://cdn.mobiscroll.com/5.24.0/css/mobiscroll.min.css"
    rel="stylesheet" />

  <!-- your global CSS -->
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/Project1.styles.css" asp-append-version="true" />

  @RenderSection("Styles", required: false)
</head>
<body class="bg-white flex flex-col min-h-screen">

<!-- header / nav -->
<header class="shadow-sm">
  <nav class="container mx-auto px-6 py-4 flex items-center justify-between">
    <!-- logo -->
    <a class="flex items-center space-x-2" asp-area="" asp-controller="Home" asp-action="Index">
      <img src="@Url.Content("~/images/logo.png")"
           alt="WanderWeave"
           class="h-12 w-auto" />
      <span class="text-2xl font-bold text-[#3AA7BC]">Wander Weave</span>
    </a>

    <!-- main nav links -->
    <ul class="hidden lg:flex items-center space-x-8 text-gray-700 font-medium">
      <li>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center hover:text-[#3AA7BC]">
          Home <i class="bi bi-chevron-down ml-1 text-sm"></i>
        </a>
      </li>
      <li>
        <a asp-area="" asp-controller="Destination" asp-action="Index" class="hover:text-[#3AA7BC]">
          Destination
        </a>
      </li>
      <li>
        <a asp-area="" asp-controller="Blog" asp-action="Index" class="hover:text-[#3AA7BC]">
          Blogs
        </a>
      </li>
    </ul>

    <!-- search + login/logout -->
    <div class="flex items-center space-x-4">

      @if (User.Identity?.IsAuthenticated ?? false)
      {
      <form asp-area="Identity"
            asp-page="/Account/Logout"
            method="post"
            class="inline">
        <button type="submit"
                class="px-5 py-2 rounded bg-red-500 text-white font-semibold hover:opacity-90">
          Logout
        </button>
      </form>
      }
      else
      {
      <a asp-area="Identity"
         asp-page="/Account/Login"
         class="px-5 py-2 rounded bg-[#3AA7BC] text-white font-semibold hover:opacity-90">
        Login
      </a>
      }
    </div>
  </nav>
</header>


<!-- yield page content -->
<main class="flex-grow">
  @RenderBody()
</main>

<!-- footer -->
<footer class="border-t py-6 text-center text-gray-500">
  &copy; 2025 WanderWeave. All rights reserved.
</footer>

<!-- scripts -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.5.0/dist/semantic.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.mobiscroll.com/5.24.0/js/mobiscroll.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
