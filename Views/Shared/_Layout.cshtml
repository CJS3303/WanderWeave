<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] – Wander Weave</title>

    <!-- Tailwind + DaisyUI -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.14/dist/full.min.css"
          rel="stylesheet"/>

    <!-- your global CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Project1.styles.css" asp-append-version="true"/>

    <!-- Semantic-UI CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.5.0/dist/semantic.min.css">
    <style>
        .ui.flag {
            background-image: url(https://cdn.jsdelivr.net/npm/semantic-ui-flag@2.5.0/flags.png);
            width: 16px;
            height: 11px;
            background-size: cover;
        }
        /* Fix z-index conflict */
        .ui.selection.dropdown {
            z-index: 10000 !important;
        }
    </style>

    <!-- page‐specific CSS -->
    @RenderSection("Styles", required: false)
</head>
<body>
<header>
    <div class="navbar bg-base-100">
        <!-- … -->
    </div>
</header>

@RenderBody()

<footer class="border-t py-4 text-center text-sm text-gray-600">
    &copy; 2024 – Project1 –
    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
</footer>

<!-- Inside <body> before closing tag -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.5.0/dist/semantic.min.js"></script>
<script src="https://cdn.tailwindcss.com"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Keep Bootstrap last -->

<!-- page‐specific JS -->
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
