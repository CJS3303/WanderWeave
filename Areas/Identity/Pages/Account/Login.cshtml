@page
@model LoginModel
@{
ViewData["Title"] = "Log in";
Layout = "_Layout";    // or "~/Areas/Identity/Pages/Shared/_Layout.cshtml"
}

@section Styles {
<style>
    :root {
        --primary-color: #4361ee;
        --secondary-color: #3f37c9;
        --accent-color: #4895ef;
        --light-color: #f8f9fa;
        --dark-color: #212529;
        --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e7f1 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        max-width: 1100px;
        margin: 2rem auto;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        background: white;
    }

    .login-header {
        background: linear-gradient(120deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 2.5rem;
        text-align: center;
    }

    .login-header h1 {
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .login-header p {
        opacity: 0.9;
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .login-form-container {
        padding: 3rem;
    }

    .form-card {
        border-radius: 15px;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: var(--transition);
    }

    .form-card:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .form-card .card-header {
        background: white;
        border-bottom: 1px solid #eef2f7;
        padding: 1.5rem;
        font-weight: 700;
        font-size: 1.4rem;
        color: var(--secondary-color);
    }

    .form-card .card-body {
        padding: 1.8rem;
    }

    .form-floating label {
        color: #6c757d;
        font-weight: 500;
    }

    .form-control {
        padding: 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        transition: var(--transition);
    }

    .form-control:focus {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.15);
    }

    .btn-login {
        background: linear-gradient(120deg, var(--primary-color), var(--secondary-color));
        border: none;
        padding: 0.8rem;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 10px;
        transition: var(--transition);
        width: 100%;
    }

    .btn-login:hover {
        transform: translateY(-3px);
        box-shadow: 0 7px 15px rgba(67, 97, 238, 0.3);
    }

    .login-links a {
        text-decoration: none;
        color: var(--primary-color);
        font-weight: 500;
        transition: var(--transition);
    }

    .login-links a:hover {
        color: var(--secondary-color);
        text-decoration: underline;
    }

    .divider {
        text-align: center;
        position: relative;
        margin: 2rem 0;
    }

    .divider:before {
        content: "";
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        border-top: 1px solid #e2e8f0;
        z-index: 1;
    }

    .divider-text {
        display: inline-block;
        background: white;
        padding: 0 1.5rem;
        position: relative;
        z-index: 2;
        color: #6c757d;
        font-weight: 500;
    }
</style>
}

<div class="login-container">
    <div class="row g-0 form-card">
        <!-- Left half: Header & Social Buttons -->
        <div class="col-md-6 login-header">
            <h1>@ViewData["Title"]</h1>
            <p>Welcome back! Please login to your account</p>

            <div class="social-login my-4">
                <button class="btn btn-google mb-3 w-100">
                    <i class="fab fa-google"></i> Continue with Google
                </button>
                <button class="btn btn-facebook w-100">
                    <i class="fab fa-facebook"></i> Continue with Facebook
                </button>
            </div>

            <div class="divider">
                <span class="divider-text">Or</span>
            </div>
        </div>

        <!-- Right half: Login Form -->
        <div class="col-md-6 login-form-container">
            <form method="post" class="card-body">
                <partial name="_ValidationScriptsPartial" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control"
                           placeholder="Email" />
                    <label asp-for="Input.Email">Email</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password"
                           class="form-control"
                           placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe"
                           class="form-check-input" />
                    <label asp-for="Input.RememberMe"
                           class="form-check-label">
                        Remember me
                    </label>
                </div>

                <button type="submit" class="btn-login">
                    Log in
                </button>

                <div class="login-links mt-3 text-center">
                    <a asp-page="./ForgotPassword">Forgot your password?</a><br />
                    <a asp-page="./Register">Don't have an account? Register</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
