@page
@model LoginModel
@{
ViewData["Title"] = "Log in";
Layout = "_Layout";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="flex-grow bg-gray-50">

  <!-- center everything in a max‑width card -->
  <section class="py-16">
    <div class="container mx-auto px-6 max-w-md">

      <!-- title -->
      <h1 class="text-3xl font-bold text-gray-800 text-center mb-8">
        Log in to Wander Weave
      </h1>

      <div class="space-y-4">

        <!-- social button: Google -->
        <form method="post"
              asp-area="Identity"
              asp-page="/Account/ExternalLogin"
              asp-route-provider="Google"
              asp-route-returnUrl="@Model.ReturnUrl"
              class="w-full">
          <button type="submit"
                  class="flex items-center justify-center w-full px-4 py-3 bg-white border border-gray-200 rounded-full shadow-sm hover:shadow-md transition">
            <img src="~/images/google.svg" alt="Google" class="h-6 w-6 mr-3" />
            <span class="text-gray-800 font-medium">Sign in with Google</span>
          </button>
        </form>

      </div>

      <!-- divider -->
      <div class="flex items-center my-6">
        <hr class="flex-grow border-gray-200" />
        <span class="px-2 text-gray-400">or</span>
        <hr class="flex-grow border-gray-200" />
      </div>

      <!-- email/password form -->
      <form method="post" class="space-y-4">
        <input type="hidden" asp-for="ReturnUrl" />
        <partial name="_ValidationScriptsPartial" />

        <div>
          <label asp-for="Input.Email" class="block text-gray-700 mb-1">Email Address</label>
          <input asp-for="Input.Email"
                 class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#3AA7BC]"
                 placeholder="you@example.com" />
          <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
          <label asp-for="Input.Password" class="block text-gray-700 mb-1">Password</label>
          <input asp-for="Input.Password"
                 type="password"
                 class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#3AA7BC]"
                 placeholder="••••••••" />
          <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex items-center text-sm">
          <input asp-for="Input.RememberMe" class="h-4 w-4 text-[#3AA7BC] border-gray-300 rounded" />
          <label asp-for="Input.RememberMe" class="ml-2 text-gray-600">Remember me</label>
        </div>

        <button type="submit"
                class="w-full bg-[#3AA7BC] hover:bg-[#338a9b] text-white py-3 rounded-full font-semibold transition">
          Login
        </button>
      </form>

      <!-- footer links -->
      <div class="mt-6 text-center text-sm text-gray-600 space-y-2">
        <a asp-page="./ForgotPassword"
           class="block text-[#3AA7BC] hover:underline">
          Forgot password?
        </a>
        <a asp-page="./Register"
           class="block text-[#3AA7BC] hover:underline">
          Create new account
        </a>
      </div>

    </div>
  </section>

</main>